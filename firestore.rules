
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Reglas permisivas para desarrollo inicial
    // Esto permite que cualquier usuario autenticado lea y escriba en cualquier documento.
    // Ideal para prototipado rápido, pero debe ser asegurado antes de producción.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
